<% 
	@page_title = "Classes" 
	@menu_item = "Meta"
%>


<% content_for :sidebar do %>
<div class="classes">
		<%= render(:partial => 'main/meta_menu') %>
</div>
<% end %>

<% content_for :main_content do %>
	<p><%= render_breadcrumbs %></p>
	<%= render(:partial => 'application/flash_notify') %>


		<h2>Character Classes:</h2>
		<% if @classes.count == 0 %>
			<p>No classes currently exist...</p>
		<% else %>

		
		<table id="classes-table">
			<tr>
				<th>Name</th>
				<th>Actions</th>
			</tr>
			<% @classes.each do |char_class| %>
				<tr>
					<td><%= char_class.name %></td>
					<td>
						<%= link_to("edit", edit_character_class_path(char_class)) %> / 
						<%= link_to "delete", char_class, {:method => :delete} %>
					</td>
				</tr>
			<% end %>
		</table>
		<% end %>
		
		<p>
			<%= link_to("Add Class", new_character_class_path, :class => "btn-green") %>
		</p>

	<% end %>