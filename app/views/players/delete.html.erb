<% 
	@page_title = "Confirm Delete" 
%>


<section id="sidebar">
	<p>Actions:</p>
	<p>
		<%= link_to("Cancel", player_path(@player), :class => 'btn-red') %>
	</p>
</section>

	<section id="main">
		<div style="text-align: center;">
			<%= form_for(@player, :method => 'delete') do |f| %>
				<h2>
					Are you sure you want to delete this player:
				</h2>
				<h2>
					<%= f.object.name %>?
				</h2>
				<h2>
					Note:  This cannot be undone!
				</h2>
				<p>
					<%= f.submit("Yes, delete!", :class => 'btn-green') %>
				</p>
			<% end %>
		</div>
	</section>