<% 
	@page_title = @player.name 
	@menu_item = "Players"
%>


<section id="sidebar">
	<p>Actions:</p>
	<p style="text-align: center;">
		<%= link_to("Edit", edit_player_path(@player), :class => 'btn-green') %> <br>
	</p>
	<p style="text-align: center;">
		<%= link_to("Delete", delete_player_path(@player), :class => 'btn-red') %>
	</p>
</section>

	<section id="main">
		<p><%= render_breadcrumbs %></p>

		<% unless flash[:notice].nil? %>
			<p class="notify"><%= flash[:notice] %></p>
		<% end %>
	
		<div id="player_details">
			<h2><%= @player.name %></h2>
			<p>
				<%= @player.email %><br></%>
				<%= @player.phone %>
			</p>
		</div>

		<div id="player_characters">
			<h3>Characters:</h3>
			<p>No characters currently exist for this player...</p>

			<p>
				<%= link_to("Add Character", player_path(@player), :class => "btn-green") %>
			</p>

		</div>

	</section>