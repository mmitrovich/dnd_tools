<%= error_messages_for(f.object) %>

<table summary="Character form fields">
  <tr>
    <th>Name</th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th>Race</th>
    <td><%= f.collection_select(:race, Race.sorted, :name, :name, :selected => "Human") %></td>
  </tr>
  <tr>
    <th>Class</th>
    <td><%= f.collection_select(:character_class, CharacterClass.sorted, :name, :name, :prompt => "Choose a class") %></td>
  </tr>
  <tr>
    <th>level</th>
    <td><%= f.select :level, (1..20) %></td>
  </tr>
  
</table>

